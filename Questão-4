        }

        button:hover {
            background-color: #218838; /* Verde mais escuro no hover */
        }

        #resultado {
            font-size: 22px; 
            margin-top: 30px;
            font-weight: bold;
            word-wrap: break-word;
        }
        
        /* Classes para as cores do resultado */
        .sucesso {
            color: #28a745; /* Verde para sucesso (corrigido do azul) */
        }

        .erro {
            color: #dc3545; /* Vermelho para erro */
        }

